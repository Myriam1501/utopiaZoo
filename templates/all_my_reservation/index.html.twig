{% extends 'base.html.twig' %}

{% block title %}Hello AllMyReservationController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>
<div class="example-wrapper">
    <table class="table table-striped" >
        <tr class="table-light"><td class="table-light">ID</td><td class="table-light">DATE</td><td class="table-light">Télécharger</td></tr>
        {% for reservation in reservation %}

            <tr class="table-light">

                <td class="table-light">{{ reservation.id }}</td>
                <td class="table-light">{{ reservation.date.format('Y-m-d') }}</td>
                <td class="table-light"><a href="{{ path('app_reservation_pdf', {amount: reservation.price, name: app.user.name, prenom: app.user.firstname, date:reservation.date, id:reservation.id }) }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-upload" viewBox="0 0 16 16">
                            <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
                            <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z"/>
                        </svg></a></td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
