{% extends 'base.html.twig' %}

{% block title %}Préparer sa Visite {% endblock %}

{% block body %}
    <style>

        .ok10 {
            width: 166px;
            height: 250px;
            border-radius: 5%;
            box-shadow: 0 20px 20px rgba(0, 0, 0, 0.3);
            margin-right: 25px;
        }


        .contenantpresentation {
            display: flex;
            flex-direction: row;
            justify-content: center;
        }

        .presentation2 {
            display: flex;
            flex-direction: row;
            justify-content: center;

            text-align: center;
            width: 1137px;
            height: 300px;
            border-radius: 50px;
            box-shadow: 0 20px 20px rgba(0, 0, 0, 0.3);
            margin: 100px;
        }

        p {
            text-align: center;
        }
        .activitee6 {
            margin-left: 30px;
            margin-right: 30px;
        }


    </style>
    {% for programme in programmes %}
<div class="contenantpresentation">
    <div class="presentation2">
        <div class="activitee6">
            <br>
            <h3>{{ programme.getTitle() }}</h3>
            <hr>
            <div class="container text-center">
                <div class="row">

                    <div class="col">
                       age min : {{ programme.getAgeMin() }}
                        <br>

                    </div>
                    <div class="col">
                        prix : {{ programme.getPrice() }}
                        <br>
                        prix réduit (-12ans) : {{ programme.getPriceReduce() }}
                    </div>
                </div>
            </div>
            <hr>
            <p><i>
                    {{ programme.getDescriptionProgram() }}
                </i></p>
            <div class="cart_btn">
                <a href="{{path('app_cartAdd',{reservation : reservation}, { program : programme.id})}}" class="btn btn-fill-out btn-addtocart" type="button"><i class="icon-basket-loaded"></i> Ajouter au panier</a>
            </div>
        </div>
        <div class="activitee5">
            <br>
            <img class="ok10" src="{{ programme.getPictureDecoPath() }}">
        </div>
    </div>

</div>
    {%endfor%}

{% endblock %}