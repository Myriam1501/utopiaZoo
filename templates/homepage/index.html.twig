    }

    .wrap
    {
        margin:50px auto 0 auto;
        width:100%;
        display:flex;
        align-items:space-around;
        max-width:1200px;
    }
    .tile
    {
        width:410px;
        height:380px;
        margin:10px;
        background-color: black;
        display:inline-block;
        background-size:cover;
        position:relative;
        cursor:pointer;
        transition: all 0.5s ease-out;
        box-shadow: 20px 60px 77px -17px rgba(0,0,0,0.44);
        overflow:hidden;
        color:white;
        font-family:'Hoefler Text';

    }
    .tile img
    {
        height:100%;
        width:100%;
        position:absolute;
        top:0;
        left:0;
        z-index:0;
        transition: all 0.4s ease-out;
    }
    .tile .text
    {
        position:absolute;
        padding:50px;
        height:calc(100% - 60px);
    }
    .lien{
        color: white;
    }
    .tile h1
    {

        font-weight:300;
        margin:0;
        text-shadow: 2px 2px 10px rgba(0,0,0,0.3);
    }
    .tile h2
    {
        font-weight:100;
        margin:20px 0 0 0;
        font-style:italic;
        transform: translateX(200px);
    }
    .tile p
    {
        position: absolute;
        top: 90%;
        left: 60%;
        font-weight:300;
        margin:20px 0 0 0;
        line-height: 25px;
        transform: translateX(-200px);
        transition-delay: 0.2s;
    }
    .animate-text
    {
        opacity:0;
        transition: all 0.6s ease-in-out;
        color: white;
    }
    .tile:hover
    {
        box-shadow: 0px 35px 77px -17px rgba(0,0,0,0.64);
        transform:scale(1.05);
    }
    .tile:hover img
    {
        opacity: 0.4;
        cursor:pointer;

    }
    .tile:hover .animate-text
    {
        transform:translateX(0);
        opacity:1;
    }

    .sous_titre{
        margin:50px auto 0 auto;
        max-width:1200px;
        font-family: "Hoefler Text";
        font-size: 40px;
        color: black;
    }
</style>

