        }

        .start {
            padding: 7px 49px;
            background-color: whitesmoke;
            cursor: pointer;
            margin-bottom: 10px;
            color: #4C3017;
            font-family: Georgia, serif;
            box-shadow: 0 15px 20px rgba(0, 0, 0, 0.3);
            font-size: 14px;
            border-radius: 3px;
            font-weight: 200;
            border: none;
        }

        .start:hover {
            background-color: #694322;
            color: whitesmoke;
        }

        .questions {
            display: none;
        }



