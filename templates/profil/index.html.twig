{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<link rel="stylesheet" type="text/css" href="{{ asset('assets/profil-style.css') }}">
<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>{{ app.user.firstname }} {{ app.user.name }}</h4>
                                <p class="text-secondary mb-1">{{ app.user.email }}</p>
                                <p class="text-muted font-size-sm">{{ app.user.address }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">First Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ app.user.firstname }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ app.user.name }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ app.user.email }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ app.user.address }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-info " target="__blank" href="{{ path('app_profil_update') }}">Edit</a>
                                <a class="btn btn-info " target="__blank" href="{{ path('app_profil_update_password') }}">Edit Password</a>
                            </div>
                        </div>
                    </div>
                </div>
                </div>



            </div>
        </div>

    </div>


{% endblock %}
