{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/payment.css') }}">
{% endblock %}
{% block javascripts %}
    <script src="{{asset('assets/js/payment.js')}}"></script>
{% endblock %}
{% block title %}Hello PaymentController!{% endblock %}

{% block body %}
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <div class="container d-flex justify-content-center mt-5 mb-5">
        <div class="row g-3">
            <div class="col-md-6">
                <span>Méthode de payement</span>
                <div class="card">
                    <div class="accordion" id="accordionExample">
                        <form class="card">
                            <div class="card-header p-0">
                                <h2 class="mb-0">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="icons">
                                            <img alt="imgPayment" src="https://i.imgur.com/2ISgYja.png" width="30">
                                            <img alt="imgPayment" src="https://i.imgur.com/W1vtnOV.png" width="30">
                                            <img alt="imgPayment" src="https://i.imgur.com/35tC99g.png" width="30">
                                            <img alt="imgPayment" src="https://i.imgur.com/2ISgYja.png" width="30">
                                        </div>
                                    </div>
                                </h2>
                            </div>

                            <form method="post">
                                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                                    <div class="card-body payment-card-body">

                                        <div id="errors"></div>
                                        <span class="font-weight-normal card-text">Titulaire de la carte</span>
                                        <div class="input">
                                            <i class="fa fa-credit-card"></i>
                                            <label>
                                            <input id="cardholder-name" type="text" class="form-control" placeholder="NOM Prénom">
                                            </label>
                                        </div>

                                        <br>
                                        <div id="card-elements" class="card-elements"></div><BR>
                                        <div id="card-errors" role="alert"></div><BR>

                                    </div>
                                </div>
                            </form>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <span>Résumé</span>
                <div class="card">
                    <div class="p-3 d-flex justify-content-between">
                        <div class="d-flex flex-column">
                            <span>Total à payer</span>
                        </div>
                        <span>{{ amount }}€</span>
                    </div>
                    <div class="p-3">
                        <button class="btn btn-primary btn-block free-button" id="card-button" type="button" data-secret={{ intent.client_secret }}>Procéder au paiement</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://js.stripe.com/v3/"></script>


{% endblock %}